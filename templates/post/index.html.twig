{% extends '@EasyAdmin/page/content.html.twig' %}
{% block page_title %}List of posts{% endblock %}
{% block page_content %}
  <div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle"
            type="button"
            data-bs-toggle="dropdown"
            aria-expanded="false">
      <i class="fas fa-filter"></i>
    </button>
    <ul class="dropdown-menu">
      <li>
        <a class="dropdown-item"
           href="{{ path('app_post_index', {hot: true}) }}"><i class="fas fa-fire"></i> Hot</a>
      </li>
      <li>
        <a class="dropdown-item" href="{{ path("app_post_index") }}"><i class="fa-regular fa-calendar"></i> Date</a>
      </li>
    </ul>
  </div>
  <div>
    {% for post in pagination %}
      {% include "components/post.html.twig" with {post: post} %}
    {% endfor %}
  </div>
  {{ knp_pagination_render(pagination) }}
{% endblock %}
