{# default Sliding pagination control implementation #}
{% if pageCount > 1 %}
  <div class="join flex-row m-2">
    {% if first is defined and current != first %}
      <a class="join-item btn btn-outline"
         href="{{ path(route, query|merge({(pageParameterName) : first})) }}">&lt;&lt;</a>
    {% endif %}
    {% if previous is defined %}
      <a class="join-item btn btn-outline"
         rel="prev"
         href="{{ path(route, query|merge({(pageParameterName) : previous})) }}">&lt;</a>
    {% endif %}
    {% for page in pagesInRange %}
      {% if page != current %}
        <a class="join-item btn btn-outline"
           href="{{ path(route, query|merge({(pageParameterName) : page})) }}">{{ page }}</a>
      {% else %}
        <a class="join-item btn btn-outline btn-disabled" href="#">{{ page }}</a>
      {% endif %}
    {% endfor %}
    {% if next is defined %}
      <a class="join-item btn btn-outline"
         rel="next"
         href="{{ path(route, query|merge({(pageParameterName) : next})) }}">&gt;</a>
    {% endif %}
    {% if last is defined and current != last %}
      <a class="join-item btn btn-outline"
         href="{{ path(route, query|merge({(pageParameterName) : last})) }}">&gt;&gt;</a>
    {% endif %}
  </div>
{% endif %}
